<h1 class="text-center mt-4">Create a new Category</h1>
<div class="container">
    <div class="row justify-content-center">
        <div class="col-10">
            <%= render 'shared/errors', obj: @category %>
            <%= form_with(model: @category, class: "form-cls shadow p-3 mb-3 rounded", local: true, data: { turbo: false }) do |f| %>
                <div class="form-group row my-4">
                    <%= f.label :name, "Category Name", class: "col-2 col-form-label text-light" %>
                    <div class="col-10">
                        <%= f.text_field :name, class: "form-control shadow rounded", placeholder: "Enter a name" %>
                    </div>
                </div>

                <div class="form-group row my-2">
                    <div class="my-4 text-center">
                        <%= f.submit class: "btn btn-outline-light btn-lg" %>
                    </div>
                </div>
            <% end %>
            
        </div>
        <div class="row text-center mb-5">
            <%= link_to '[ Cancel and return to articles listing ]', articles_path, class: "text-info"  %>
        </div>
    </div>
</div>